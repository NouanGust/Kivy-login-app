ScreenManager:
    LogadoScreen:
        name: 'logado'
    LoginScreen:
        name: 'login'


<LoginScreen@Screen>:
    BoxLayout:
        orientation: 'vertical'
        size_hint_y: None
        height: 700
        padding: [40,40,40,40]


        MDScreen:
            md_bg_color: app.theme_cls.accent_color
            radius: [25, 25, 25, 25]
            size_hint_x: None
            size_hint_y: None
            width: 500
            height: 500
            pos_hint: {'center_x': 0.5, 'center_y': 0.5}

            MDLabel:
                id: loginLabel
                text: "Login"
                color: (0,0,0)
                pos_hint: {'center_x': 0.5,'center_y': 0.8}
                halign: 'center'
                font_style: 'H1'
                

            MDTextField:
                id: username
                pos_hint: {'center_x': 0.5,'center_y': 0.6}
                size_hint_x: None
                mode: "rectangle"
                hint_text: 'Nome de usu√°rio: '
                width: 350  
            
            MDTextField:
                id: senha
                pos_hint: {'center_x': 0.5,'center_y': 0.45}
                size_hint_x: None
                mode: "fill"
                fill_color: 0,0,0,1
                line_color_normal: app.theme_cls.accent_color
                hint_text: 'Senha: '
                width: 350

            MDLabel:
                id: errorLabel
                text: ""
                theme_text_color: "Error"
                pos_hint: {'center_x': 0.5,'center_y': 0.2}
                halign: 'center'
                font_style: 'Caption'

            MDRectangleFlatButton:
                id: login-button
                on_release: app.login()
                text: 'Login'
                pos_hint: {'center_x': 0.5,'center_y': 0.3}
                size_hint_x: None
                width: 350
    
<LogadoScreen@Screen>:
    BoxLayout:
        orientation: 'vertical'
        MDLabel:
            text: "Minhas tarefas"
            halign: "center"


        ScrollView:
            id: telaPrincipal

            BoxLayout:
                MDLabel:
                    id: tarefaLabel
                    text: "Nome da tarefa"
                    font_style: "Body1"

                BoxLayout:
                    orientation: 'vertical'

                    MDIconButton:
                        id: concluirBtn
                        icon:  "check"
                        on_release: app.concluir()

                    MDIconButton:
                        id: lixoBtn
                        icon:  "trash-can"
        
        BoxLayout:
            orientation: 'horizontal'

            MDRectangleFlatButton:
                text: "perfil"

            MDRectangleFlatButton:
                id: addButton
                text: "add tarefa"
                on_release: app.addTarefa()